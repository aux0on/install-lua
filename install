local baseFolder = "Ixry Shizuka"
local pluginsFolder = baseFolder .. "/plugins"
local addonFile = pluginsFolder .. "/A6PGs.lua"

if not isfolder(baseFolder) then
    makefolder(baseFolder)
end

if not isfolder(pluginsFolder) then
    makefolder(pluginsFolder)
end

local url = "https://raw.githubusercontent.com/aux0on/lua/refs/heads/main/A6PGs.lua"

local success, content = pcall(function()
    return game:HttpGet(url)
end)

if success and content then
    writefile(addonFile, content)
    print("A6PGs.lua successfully created in " .. pluginsFolder)
else
    game.Players.LocalPlayer:Kick("An Error Occurred While Trying To Download Github Files, Hmmmm...")
end
